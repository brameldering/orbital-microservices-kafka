generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("PG_URI_INVENTORY")
}

model api_access {
  api_name      String @id @db.VarChar(32)
  microservice String @db.VarChar(32)
  allowed_roles role[] @relation("api_access_roles")
}

model role {
  role        String       @id @db.VarChar(32)
  roleDisplay String      @db.VarChar(32)
  api_access  api_access[] @relation("api_access_roles")
}

model product {
  product_id     String            @id @db.VarChar(14)
  name           String            @db.VarChar(256)
  brand          String            @db.VarChar(256)
  category       String            @db.VarChar(256)
  quantity       product_quantity?
  serial_numbers serial_number[]
}

model product_quantity {
  product_id String  @id @db.VarChar(14)
  quantity   BigInt
  product    product @relation(fields: [product_id], references: [product_id])
}

model serial_number {
  product_id    String  @db.VarChar(14)
  serial_number String  @db.VarChar(64)
  status        String? @db.VarChar(16)
  product       product @relation(fields: [product_id], references: [product_id], onDelete: NoAction, onUpdate: NoAction)

  @@id([product_id, serial_number])
}
